{
  "name": "imarc-boilerplate",
  "version": "5.1.0",
  "description": "A light, customizable frontend starter kit and component library",
  "author": "Imarc",
  "license": "Apache-2.0",
  "bin": "./boilerplate.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imarc/boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/imarc/boilerplate/issues"
  },
  "homepage": "https://github.com/imarc/boilerplate#readme",
  "scripts": {
    "lint": "eslint resources",
    "fractal": "fractal",
    "dev": "mix",
    "prod": "mix --production",
    "watch": "mix watch",
    "watch-poll": "mix watch -- -- watch-options-poll=1000",
    "hot": "mix watch --hot",
    "build": "npm run prod && npm run fractal build"
  },
  "dependencies": {
    "@frctl/fractal": "^1.5.4",
    "@frctl/twig": "^1.2.6",
    "candlepin": "^1.3.4",
    "cross-env": "^7.0.2",
    "expose-loader": "^3.0.0",
    "fractal-theme-hydrogen": "^1.0.4",
    "import-glob-loader": "^1.1.0",
    "jquery": "^3.5.1",
    "jsonfile": "^6.0.1",
    "laravel-mix": "^6.0.11",
    "laravel-mix-purgecss": "^6.0.0",
    "lazysizes": "^5.3.2",
    "mmenu-light": "^3.0.8",
    "normalize-scss": "^7.0.1",
    "portal-vue": "^2.1.7",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^12.0.0",
    "slick-carousel": "^1.8.1",
    "swiper": "^5.2.0",
    "vue": "^2.6.11",
    "vue-awesome-swiper": "^4.1.1"
  },
  "devDependencies": {
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-vue": "^8.2.0",
    "postcss": "^8.2.6",
    "sass": "^1.34.0",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12"
  },
  "peerDependencies": {
    "postcss": "^8.2.6"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/recommended",
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "ignorePatterns": ["*.plugin.js"],
    "rules": {
      "comma-dangle": [
        "warn",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ],
      "indent": [
        "warn",
        4
      ],
      "vue/html-indent": [
        "warn",
        4
      ]
    }
  }
}
